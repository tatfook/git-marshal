{
  "extends": ["tslint-config-egg"],
  "rules": {
      "indent": [true, "spaces", 4],
      "max-len": [
          "error",
          {
              "code": 160
          }
      ],
      "no-bitwise": false,
      "no-magic-numbers": [
          true,
          {
              "allowed-numbers": [0, 1, -1, 200, 400, 401, 403, 404, 411, 500],
              "ignoreArrayIndexes": true,
              "enforceConst": true,
              "detectObjects": false
          }
      ],
      "no-console": true
  }
}
